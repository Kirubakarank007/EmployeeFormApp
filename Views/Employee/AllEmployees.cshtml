@model List<Employee>
<link rel="stylesheet" href="~/css/AllEmployees.css" asp-append-version="true" />

<h2>All Employees</h2>

@if (Model != null && Model.Any())
{
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Name</th>
                <th>EmpId</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                 <td>
                    @if (!string.IsNullOrEmpty(emp.ImagePath))
                    {
                        <img src="@emp.ImagePath" width="100" height="100"  />
                    }
                </td>
                <td>@emp.Name</td>
                <td>@emp.EmpId</td>
                <td>@emp.EmailAddress</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="empId" value="@emp.EmpId" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No employees found.</p>
}
