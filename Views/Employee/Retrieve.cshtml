@model Employee
@{
    ViewData["Title"] = "Retrieve Employee";
}

<h2>Retrieve Employee Details</h2>

<form asp-action="Retrieve" method="post">
    <div>
        <label for="empId">Enter Employee ID</label>
        <input type="number" name="empId" required />
        <button type="submit">Search</button>
    </div>
</form>

@if (Model != null)
{
    <h3>Details Found:</h3>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.EmailAddress</p>
    <p><strong>Emp ID:</strong> @Model.EmpId</p>
    <img src="@Model.ImagePath" width="150" />
}
